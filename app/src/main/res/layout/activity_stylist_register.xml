<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StylistRegisterActivity"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="@drawable/shape_toolbar"
        android:layout_height="0dp" />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_toolbar"
        app:title="美容美发会员系统"
        app:titleTextColor="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="欢迎注册发型师"
                    android:textSize="30sp"
                    android:textColor="#333333"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:orientation="vertical">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入用户名"
                    android:inputType="text"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/user"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true"
                    app:met_maxCharacters="10"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/real_name"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入真实姓名"
                    android:inputType="text"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/user"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true"
                    app:met_maxCharacters="10"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/password"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    app:met_iconLeft="@drawable/password"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/confirm_password"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:hint="请再次输入密码"
                    app:met_iconLeft="@drawable/password"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/phone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:hint="请输入联系电话"
                    app:met_iconLeft="@drawable/phone"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true"
                    app:met_maxCharacters="11"
                    app:met_helperText="11位数字"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/speciality"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="请输入特长"
                    app:met_iconLeft="@drawable/hobby"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/working_years"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:hint="请输入工作年限"
                    app:met_iconLeft="@drawable/working_years"
                    app:met_iconPadding="5dp"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="true"
                    app:met_singleLineEllipsis="true"
                    app:met_maxCharacters="2"/>
<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:orientation="horizontal">-->
<!--                    <TextView-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:text="请选择您所属的店"/>-->
<!--                    -->
<!--                </LinearLayout>-->
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:text="请选择您所属的店"/>
                <com.manojbhadane.QButton
                    android:id="@+id/btn_register"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="80dp"
                    app:qb_backgroundColor="@color/colorAccent"
                    android:text="确认注册"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>