<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:id="@+id/card"
    android:padding="4dp"
    android:clickable="true"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="服务单"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reservationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textSize="17sp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/label"
            app:layout_constraintStart_toEndOf="@+id/label"
            app:layout_constraintTop_toTopOf="@+id/label" />

        <!--        <TextView-->
        <!--            android:id="@+id/remainTime"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="(29:59后自动关闭)"-->
        <!--            android:layout_marginEnd="8dp"-->
        <!--            android:textSize="15sp"-->
        <!--            android:textColor="@color/cancel"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/status"-->
        <!--            app:layout_constraintEnd_toStartOf="@+id/status"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/status" />-->

        <TextView
            android:id="@+id/serveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="11日 11:22"
            android:textColor="@color/cancel"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label" />

        <TextView
            android:id="@+id/userLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="8dp"
            android:text="用户："
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商店的"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/services"
            app:layout_constraintTop_toTopOf="@+id/userLabel" />

        <TextView
            android:id="@+id/servicesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="服务内容："
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/userLabel"
            app:layout_constraintTop_toBottomOf="@+id/userLabel" />

        <TextView
            android:id="@+id/services"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="理发、洗头、焗油"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/servicesLabel"
            app:layout_constraintTop_toTopOf="@+id/servicesLabel" />

        <TextView
            android:id="@+id/hobbyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户偏好："
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/servicesLabel"
            app:layout_constraintTop_toTopOf="@+id/hobby" />

        <TextView
            android:id="@+id/hobby"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:text="敲代码、写BUG"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/services"
            app:layout_constraintTop_toBottomOf="@+id/services" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
